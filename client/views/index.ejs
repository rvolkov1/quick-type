<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Quick Type</title>
    <link rel="stylesheet" href="../style.css">
  </head>
  <body>
    <div class="header">
      <div class="title headerText" onclick="location.href='localhost:8080';">Quick Type</div>
      <div class="nonTitleHeaderText">
        <div class="headerText">Sign In</div>
        <div class="headerText">Settings</div>
        <!--
        <label class="switch" onclick="toggleDarkTheme()">
          <input type="checkbox">
          <span class="slider"></span>
        </label>
      -->
      </div>
    </div>
    <div class="textContainer">
      <div class="textBox noSelect">
        <div class="metrics">
          <div class="firstMetric metricsText wordsCompleted"></div>
          <div class="lastMetric metricsText wpm"></div>
        </div>
        <div class="text">
          <% text.forEach((word) => { %>
            <div class="word noSelect">
              <% for (letter of word) { %>
                <div class="letter noSelect"><%= letter === ' '? "\u00A0" : letter %></div>
              <% } %>
            </div>
          <% }); %>

        </div>
      </div>
    </div>
    <div id="resultsScreen">
      <div class="wpm">wpm</div>
    </div>
  </body>
  <script src="../script.js"></script>
</html>
